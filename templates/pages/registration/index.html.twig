{% extends 'base.html.twig' %}

{% block title %}
	Formulaire d'inscription
{% endblock %}

{% block body %}
	<div class="container my-5">

      {# Message flash #}
			{% for message in app.flashes('success') %}
				<div class="alert alert-success">
					{{ message }}
				</div>
			{% endfor %}

		<h1 class="text-center amatic title">I N S C R I P T I O N</h1>
		<br><br>

  		<!-- Formulaire de connexion -->
		<section class="row justify-content-center">
			<div class="col-md-4"> 
			<br>
			{{form_start(form)}}
			{{form_widget(form)}}
			{{form_end(form)}}
			</div>
		</section>
		<br><br>
	</div>
{% endblock %}
