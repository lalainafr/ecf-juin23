{% extends 'base.html.twig' %}

{% block title %}
	Formulaire de connexion
{% endblock %}

{% block body %}
	<div
		class="container my-5">

		{# Message flash #}

			{% for message in app.flashes('success') %}
				<div class="alert alert-success">
					{{ message }}
				</div>
			{% endfor %}

		<h1 class="text-center amatic title">C O N N E X I O N</h1>
		<br><br>

		<!-- Formulaire de connexion -->
		<section class="row justify-content-center">
			<div class="col-md-4">
				<form action="{{ path('app_login') }}" method="post">
					<div class="form-group">
						<label for="username">Email:</label>
						<input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Entrer votre adresse email">
					</div>
					<br>
					<div>
						<label for="password">Mot de passe:</label>
						<input type="password" class="form-control" id=" password" name=" _password" placeholder=" entrer votre mot de passe">
					</div>
					<br>
					<button class="btn btn-info" type="submit">login</button>

				</form>
			</div>
		</section>
		<br><br>
	</div>
{% endblock %}
