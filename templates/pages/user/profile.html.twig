{% extends 'base.html.twig' %}

{% block title %}
	Profil de l'utilisateur utilisateur
{% endblock %}

{% block body %}
	<div class="container my-5">

		<h1 class="text-center amatic">Profil de l'utilisateur</h1>
		<br><br>
		<section class="row justify-content-center">
			<div class="col-md-6">
				<table class="table table-striped">
					<tbody>
						<tr>
							<td>NOM & PRENOM:</td>
							<td>{{user.fullName}}</td>
						</tr>
						<tr>
							<td>ADRESSE EMAIL:</td>
							<td>{{user.email}}</td>
						</tr>
						<tr>
							<td>NOMBRE DE CONVIVE PAR DEFAUT:</td>
							<td>{{user.nbGuest}}</td>
						</tr>
						<tr>
							<td>ALLERGIE(S):</td>
							<td>
								{% for allergy in allergies %}
									{{ allergy}}
								{% endfor %}
							</td>
						</tr>
						<tr>
							<td>COMPTE CREE LE:</td>
							<td>{{user.createdAt| date('d/m/Y')}}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</section>


		<br><br>
	</div>
{% endblock %}
